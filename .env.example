# Server Configuration
PORT=8080

# Data Source Configuration
# Options: "csv" (mock data) or "fes" (NetCDF data)
DATA_SOURCE=csv

# Data Directory Paths
DATA_DIR=./data
FES_DIR=./data/fes

# Timezone (for display purposes - internal calculations use UTC)
TZ=Asia/Tokyo

# Logging
# Options: "debug", "info", "warn", "error"
LOG_LEVEL=info

# API Configuration
# Maximum time range for predictions (in hours)
MAX_PREDICTION_HOURS=8760

# Maximum number of prediction points
MAX_PREDICTION_POINTS=10000
